<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:visibility="gone"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/inner_main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.cs_final.englishdict.fragments.MainPageFragment">
    </FrameLayout>

    <TextView
        android:id="@+id/txtCool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text="Cool! let's start learnin"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottomNavBarBackground"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/bottomNavBarText"
        app:menu="@menu/bottom_navigation_menu"/>
</RelativeLayout>